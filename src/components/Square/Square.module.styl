.Square
  flex 0 0 50px
  display flex
  width 50px
  height 50px
  background-color white
  color black
  position relative

  &.active
    background-color: #EEE

  &.block
    background-color: black
    color transparent

    &.active
      background-color #444

  &.short
    background-color: #FDD

    &.active
      background-color: #FCC

  &.rect
    background-color: #DDF

    &.active
      background-color: #CCF

  .letter
    width 100%
    height 100%
    display: flex
    align-items: center
    justify-content: center
    font-family: 'Courier New', Courier, monospace
    font-size: 1.8em;
    font-weight: 500;

  .number
    position absolute
    top 1px
    left 3px
    font-size: 10px
