.Square
  flex 0 0 50px
  display flex
  width 50px
  height 50px
  background-color white
  color black
  position relative

  &.block
    background-color black

  input
    width 100%
    height 100%
    text-align: center
    border none
    outline none
    background-color: white
    color black
    font-family: 'Courier New', Courier, monospace
    font-size: 1.8em;
    font-weight: 500;

    &:focus, &:active
      border none
      outline none

  .number
    position absolute
    top 1px
    left 3px
    font-size: 10px
