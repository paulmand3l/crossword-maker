.Square
  flex 0 0 50px
  display flex
  width 50px
  height 50px
  background-color white
  color black
  position relative

  &.block
    input
      background-color black

      &:focus, &:active
        background-color #444
        color #444

  input
    width 100%
    height 100%
    text-align: center
    border none
    outline none
    background-color: white
    color black
    font-family: 'Courier New', Courier, monospace
    font-size: 1.8em;
    font-weight: 500;
    caret-color: transparent;

    &::selection
      background-color transparent

    &:focus, &:active
      border none
      outline none
      background-color #EEE

  .number
    position absolute
    top 1px
    left 3px
    font-size: 10px
